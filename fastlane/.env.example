# Fastlane-specific Environment Variables Template
# Copy this file to .env and fill in your actual values

# Fastlane Configuration
FASTLANE_USER=your-apple-id@example.com
FASTLANE_TEAM_ID=YOUR_TEAM_ID_HERE
FASTLANE_ITC_TEAM_ID=YOUR_ITUNES_CONNECT_TEAM_ID_HERE

# Skip certain Fastlane prompts for CI/CD
FASTLANE_SKIP_UPDATE_CHECK=true
FASTLANE_HIDE_GITHUB_ISSUES=true

# TestFlight Specific
PILOT_WAIT_FOR_BUILD_PROCESSING=false
PILOT_SKIP_SUBMISSION=false
PILOT_DISTRIBUTE_EXTERNAL=false

# Optional: Slack notifications (if using Slack integration)
# SLACK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK